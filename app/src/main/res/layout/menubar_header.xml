<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/nav_menu_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/menu_header_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Attendant Name"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:textSize="20dp"
        android:id="@+id/menu_header_title"
        android:layout_alignBottom="@+id/menu_header_image"
        android:layout_toRightOf="@+id/menu_header_image"
        android:layout_toEndOf="@+id/menu_header_image" />
</RelativeLayout>