<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="date"
        android:textColor="@color/notification_color"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/message_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/date"
        android:textSize="14sp" />

    <TextView
        android:text="Message"
        android:textColor="@color/month_black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/message_name"
        android:layout_alignLeft="@+id/message_name"
        android:layout_alignStart="@+id/message_name"
        android:id="@+id/message"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/user"
        android:id="@+id/message_image"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="name"
        android:textColor="@color/date"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/message_name"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/message_image"
        android:layout_toEndOf="@+id/message_image" />
</RelativeLayout>