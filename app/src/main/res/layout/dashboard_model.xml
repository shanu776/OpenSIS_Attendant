<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="beaconID"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/childname"
        android:layout_alignLeft="@+id/childname"
        android:layout_alignStart="@+id/childname"
        android:id="@+id/beaconId"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/user"
        android:id="@+id/studentImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="childname"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:id="@+id/childname"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/studentImage"
        android:layout_toEndOf="@+id/studentImage" />
</RelativeLayout>